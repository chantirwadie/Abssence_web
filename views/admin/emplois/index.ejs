    <link href="../css/admin.css" rel="stylesheet" type="text/css">
    <link href="../css/dropzone.css" rel="stylesheet" type="text/css">
    <link href="../css/popupForm.css" rel="stylesheet" type="text/css">



</head>





<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">



        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <li>
                <div class="sidebar-brand d-flex align-items-center">
                    <div class="sidebar-brand-icon">
                        <img src="../images/user.png" alt="Omar" width="50" height="50" style="float: left;">
                    </div>
                    <div class="sidebar-brand-text mx-3">
                        <span style="font-size: 12px;margin: 5px;">
                            <%= userPrenom %>
                                <%= userNom %>
                        </span>
                    </div>
                </div>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item">
                <a class="nav-link" href="/dashboard">
                    <i class="fas fa-home fa-fw "></i>
                    <span>Dashboard</span></a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Gestion
            </div>

            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseOne"
                    aria-expanded="true" aria-controls="collapseTwo">
                    <i class="fas fa-user-graduate"></i>
                    <span>Gestion des utulisateurs</span>
                </a>
                <div id="collapseOne" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="/admin/admins">Gestion des admins</a>
                        <a class="collapse-item" href="/admin/etudiants">Gestion des étudiants</a>
                        <a class="collapse-item" href="/admin/professeurs">Gestion des professeurs</a>
                    </div>
                </div>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/admin/filieres">
                    <i class="fas fa-layer-group"></i>
                    <span>Filières</span></a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/admin/modules">
                    <i class="fas fa-qrcode"></i>
                    <span>Modules</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/creneaux">
                    <i class="fas fa-clock"></i>
                    <span>Créneaux</span></a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/admin/emplois">
                    <i class="far fa-calendar-alt"></i>
                    <span>Emploits</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/absences">
                    <i class="fas fa-user-check"></i>
                    <span>Absences</span></a>
            </li>


            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-target="#hhhh">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">
                                    <%= userPrenom %>
                                        <%= userNom %>
                                </span>
                                <img class="img-profile rounded-circle" src="../images/user.png">
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                aria-labelledby="userDropdown" id="hhhh">
                                <a class="dropdown-item" href="/admin/profile">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Profile
                                </a>
                                <div class="dropdown-divider"></div>
                                <form method="post" , action="/logout">
                                    <button class="dropdown-item" type="submit" data-toggle="modal"
                                        data-target="#logoutModal">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Logout
                                    </button>
                                </form>
                            </div>
                        </li>
                    </ul>

                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container">


                    <h1>
                        <%= title %>
                            <%= filierecode %>
                    </h1>

                    <form class="form-row" action="/admin/emplois/" method="post" autocomplete="off">
                        <div class="col-sm-11 col-lg-7 codecontainer">
                            <select style="text-align: center;" class="form-control m-3" id="filiere_id"
                                placeholder="filiere" name="filiere_id" required>
                                <% filieres.forEach(function(e){ %>
                                    <option value="<%= e._id %>">
                                        <%= e.code %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="col-sm-11 col-lg-5 codecontainer">
                            <button type="submit" class="btn btn-success m-3">Search</button>
                        </div>
                    </form>



                    <div class="schedule__container">
                        <div class="days__container">
                            <span class="corner"></span>
                            <div class="day">Monday</div>
                            <div class="day">Tuesday</div>
                            <div class="day">Wednesday</div>
                            <div class="day">Thursday</div>
                            <div class="day">Friday</div>
                            <div class="day">Saturday</div>
                        </div>
                        <div class="part__day">
                            <span class="time">
                                <%= creneaux[0].debut %>am <br> - <br>
                                    <%= creneaux[0].fin %>am
                            </span>

                            <% for ( i=0; i <jours.length ; i++){ %>
                                <% if(emplois[i].emploi.etat==true){ %>
                                    <div class="task"
                                        onclick="openForm('<%= emplois[i].emploi.type %>' , '<%= emplois[i].emploi.module._id %>' , '<%= emplois[i].emploi._id %>')">

                                        <tr>
                                            <th scope="col">
                                                <%= emplois[i].emploi.type %>
                                            </th>
                                            <th scope="col">
                                                <%= emplois[i].emploi.module.libelle %>
                                            </th>
                                            <th scope="col" class="prof">P.<%= emplois[i].profNom %>
                                            </th>

                                        </tr>

                                        <% } else { %>
                                            <div class="task" onclick="openForm(1,1,'<%= emplois[i].emploi._id %>')">


                                                <%} %>
                                            </div>
                                            <%} %>


                                    </div>
                                    <div class="part__day">
                                        <span class="time">
                                            <%= creneaux[1].debut %>am <br> - <br>
                                                <%= creneaux[1].debut %>pm
                                        </span>
                                        <% for ( i=jours.length ; i <jours.length*2 ; i++){ %>
                                            <% if(emplois[i].emploi.etat==true){ %>
                                                <div class="task"
                                                    onclick="openForm('<%= emplois[i].emploi.type %>' , '<%= emplois[i].emploi.module._id %>' , '<%= emplois[i].emploi._id %>')">

                                                    <tr>
                                                        <th scope="col">
                                                            <%= emplois[i].emploi.type %>
                                                        </th>
                                                        <th scope="col">
                                                            <%= emplois[i].emploi.module.libelle %>
                                                        </th>
                                                        <th scope="col" class="prof">P.<%= emplois[i].profNom %>
                                                        </th>

                                                    </tr>
                                                    <% } else { %>
                                                        <div class="task"
                                                            onclick="openForm(1,1,'<%= emplois[i].emploi._id %>')">
                                                            <%} %>
                                                        </div>
                                                        <%} %>

                                                </div>
                                                <div class="part__day">
                                                    <span class="time">
                                                        <%= creneaux[1].fin %>pm <br> - <br>
                                                            <%= creneaux[2].debut %>pm
                                                    </span>
                                                    <div class="taskpause"></div>
                                                    <div class="taskpause"></div>
                                                    <div class="taskpause"></div>
                                                    <div class="taskpause"></div>
                                                    <div class="taskpause"></div>
                                                    <div class="taskpause"></div>
                                                </div>




                                                <div class="part__day">
                                                    <span class="time">
                                                        <%= creneaux[2].debut %>pm <br> - <br>
                                                            <%= creneaux[2].fin %>pm
                                                    </span>
                                                    <% for ( i=jours.length*2; i <jours.length*3 ; i++){ %>
                                                        <% if(emplois[i].emploi.etat==true){ %>
                                                            <div class="task"
                                                                onclick="openForm('<%= emplois[i].emploi.type %>' , '<%= emplois[i].emploi.module._id %>' , '<%= emplois[i].emploi._id %>')">

                                                                <tr>
                                                                    <th scope="col">
                                                                        <%= emplois[i].emploi.type %>
                                                                    </th>
                                                                    <th scope="col">
                                                                        <%= emplois[i].emploi.module.libelle %>
                                                                    </th>
                                                                    <th scope="col" class="prof">P.<%=
                                                                            emplois[i].profNom %>
                                                                    </th>

                                                                </tr>
                                                                <% } else { %>
                                                                    <div class="task"
                                                                        onclick="openForm(1,1,'<%= emplois[i].emploi._id %>')">
                                                                        <%} %>
                                                                    </div>
                                                                    <%} %>
                                                            </div>
                                                            <div class="part__day">
                                                                <span class="time">
                                                                    <%= creneaux[3].debut %>pm <br> - <br>
                                                                        <%= creneaux[3].fin %>pm
                                                                </span>
                                                                <% for ( i=jours.length*3; i <jours.length*4 ; i++){ %>
                                                                    <% if(emplois[i].emploi.etat==true){ %>
                                                                        <div class="task"
                                                                            onclick="openForm('<%= emplois[i].emploi.type %>' , '<%= emplois[i].emploi.module._id %>' , '<%= emplois[i].emploi._id %>')">

                                                                            <tr>
                                                                                <th scope="col">
                                                                                    <%= emplois[i].emploi.type %>
                                                                                </th>
                                                                                <th scope="col">
                                                                                    <%= emplois[i].emploi.module.libelle
                                                                                        %>
                                                                                </th>
                                                                                <th scope="col" class="prof">P.<%=
                                                                                        emplois[i].profNom %>
                                                                                </th>

                                                                            </tr>
                                                                            <% } else { %>
                                                                                <div class="task"
                                                                                    onclick="openForm(1,1,'<%= emplois[i].emploi._id %>')">
                                                                                    <%} %>
                                                                                </div>
                                                                                <%} %>
                                                                        </div>

                                                            </div>


                                                </div>


                                    </div> <!-- End of Main Content -->

                                    <!-- Footer -->
                                    <footer class="sticky-footer bg-white">
                                        <div class="container my-auto">
                                            <div class="copyright text-center my-auto">
                                                <span>Copyright &copy; Naitelhaj Nafil Taih 2022</span>
                                            </div>
                                        </div>
                                    </footer>
                                    <!-- End of Footer -->

                        </div>
                        <!-- End of Content Wrapper -->

                    </div>
                    <!-- End of Page Wrapper -->

                    <!-- Scroll to Top Button-->
                    <a class="scroll-to-top rounded" href="#page-top">
                        <i class="fas fa-angle-up"></i>
                    </a>

                    <div class="loader-wrapper">
                        <span class="loader"><span class="loader-inner"></span></span>
                    </div>



                    <div class="form-popup" id="myForm">
                        <form id="formEdit_id" method="POST" autocomplete="off" class="form-container">
                            <label for="name">Edit Emploi <%= filierecode %> </label>
                            <label>Type</label>
                            <select id="type" placeholder="TP" name="type" required>
                                <option value="Tp">TP</option>
                                <option value="Td">TD</option>
                                <option value="cours">cours</option>
                            </select>

                            <label>Module</label>
                            <select id="module" placeholder="module" name="module" required>
                                <% modules.forEach(function(e){ %>
                                    <option value="<%= e._id %>">
                                        <%= e.libelle %>
                                    </option>
                                    <% }); %>
                            </select>


                            <button type="submit" class="btn">Modify</button>
                            <a id="delete_emploi" href="emplois/delete/$('#id_emploi')" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete epmloi');">vider</a>

                            <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
                        </form>
                    </div>

                    <script>

                        function openForm(type, id_module, id_emploi) {
                            $('#id_emploi').val(id_emploi);
                            document.getElementById("myForm").style.display = "block";
                            $('#type').val(type);
                            $('#module').val(id_module);
                            document.getElementById("delete_emploi").href = "emplois/delete/" + id_emploi;
                            document.getElementById("formEdit_id").action = "/admin/emplois/update/" + id_emploi;

                        }
                        function closeForm() {
                            document.getElementById("myForm").style.display = "none";
                        }
                    </script>

                    <!-- Bootstrap core JavaScript-->
                    <script src="../js/jquery-3.6.0.js"></script>
                    <script src="../js/dataTables.bootstrap4.js"></script>
                    <script src="../js/bootstrap.min.js"></script>
                    <script src="../js/bootstrap.bundle.js"></script>
                    <script src="../js/jquery.dataTables.min.js"></script>
                    <script src="../js/dataTables.bootstrap5.min.js"></script>


                    <!-- Core plugin JavaScript-->
                    <script src="../js/jquery.easing.js"></script>
                    <script src="../js/dropzone.js"></script>

                    <!-- Custom scripts for all pages-->
                    <script src="../js/sb-admin-2.js"></script>
                    <script src="../js/all.js"></script>

                    <script src="../js/blocs/blocs.js"></script>

</body>

</html>